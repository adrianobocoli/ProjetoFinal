<h1>Cadastre-se</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@usuario, html: { multipart: true }) do |f| %>
		<%= render 'compartilhado/error_messages' %>

      <%= f.label :login, "Usuario" %>
      <%= f.text_field :login, class: 'form-control' %>

      <%= f.label :senha, "Senha"%>
      <%= f.password_field :senha, class: 'form-control'  %>

      <%= f.label :nomeCompleto, "Nome Completo" %>
      <%= f.text_field :nomeCompleto, class: 'form-control'  %>

      <%= f.label :foto, "Foto" %>
      <%= f.file_field :foto, accept: 'image/jpeg,image/gif,image/png', class: 'form-control'  %>
	
		<%= f.label :cidade, "Cidade" %>
      <%= f.text_field :cidade, class: 'form-control'  %>

		<%= f.label :estado, "Estado" %>
      <%= f.text_field :estado, class: 'form-control'  %>
		
		<%= f.label :email, "Email" %>
      <%= f.text_field :email, class: 'form-control'  %>

		<%= f.label :descricaoPessoal, "Descrição Pessoal" %>
      <%= f.text_field :descricaoPessoal, class: 'form-control'  %>

      <%= f.submit "Criar minha conta!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#usuario_foto').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Tamanho maximo de arquivo 5MB. Escolha um arquivo menor.');
    }
  });
</script>
