<p id="notice"><%= notice %></p>

<h1>Informações do usuário <%= @usuario.nomeCompleto %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p>
  <strong>Login:</strong>
  <%= @usuario.login %>
</p>

<p>
  <strong>Senha:</strong>
  <%= @usuario.senha %>
</p>

<p>
  <strong>Foto:</strong>
  <%= image_tag @usuario.foto.url if @usuario.foto? %>
</p>

<p>
  <strong>Nome Completo:</strong>
  <%= @usuario.nomeCompleto %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= @usuario.cidade %>
</p>

<p>
  <strong>Estado:</strong>
  <%= @usuario.estado %>
</p>

<p>
  <strong>Email:</strong>
  <%= @usuario.email %>
</p>

<p>
  <strong>Descricao Pessoal:</strong>
  <%= @usuario.descricaoPessoal %>
</p>

<%= link_to "Editar meus dados!", edit_usuario_path(@usuario), class: "btn btn-lg btn-primary" %>
</div>
</div>


